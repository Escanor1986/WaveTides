extends ../layout

block content
  div(class="d-flex flex-row content justify-content-center mx-auto")
    form(class="card" method="post" action="/auth/signin")
      div(class="card-header") Connexion
          a(href="/auth/google" class="btn btn-primary m-5") Connexion avec Google
      div(class="card-body")
        div(class="mb-3")
          label Email
          input(class="form-control" type="email" name="email")
        div(class="mb-3")
          label Password
          input(class="form-control" type="password" name="password")
        if errors
          ul(class="my-2")
            each error in errors
              li(class="text-danger")= error
        div(class="w-100")
          input(type="submit" value="connexion" class="btn btn-primary ms-auto d-block")